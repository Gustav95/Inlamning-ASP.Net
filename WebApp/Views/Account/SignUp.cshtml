
@model UserSignUpViewModel
@{
    ViewData["Title"] = "Sign Up for new Account";
}


<div class="d-flex justify-content-between mb-5 pb-3">

    <h1 class="display-4">Sign Up for new Account</h1>

    <form name="myform" method="post" class="col-10 col-xl-6" novalidate>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">FirstName</label>
            <input id="firstname" type="text" asp-for="FirstName" class="form-control" autocomplete="off"/>
            <span id="faulty-value"></span>
            <small class="text-danger"><span asp-validation-for="FirstName"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label">LastName</label>
            <input id="lastname" type="text" asp-for="LastName" class="form-control" autocomplete="off" />
            <span id="lastname-value"></span>
            <small class="text-danger"><span asp-validation-for="LastName"></span></small>
        </div>
        
        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input id="email" type="email" asp-for="Email" class="form-control" autocomplete="off" />
            <span id="email-value"></span>
            <small class="text-danger"><span asp-validation-for="Email"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label">PhoneNumber</label>
            <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
            <small class="text-danger"><span asp-validation-for="PhoneNumber"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input id="password" type="password" asp-for="Password" class="form-control" autocomplete="off" />
            
            <small class="text-danger"><span asp-validation-for="Password"></span></small>
        </div>


        <div class="mb-3">
            <label asp-for="ConfirmPassword" class="form-label">ConfirmPassword</label>
            <input id="confirmpassword" type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="off" />

          <span id="password-value"></span>
            <small class="text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="StreetName" class="form-label">StreetName</label>
            <input asp-for="StreetName" class="form-control" autocomplete="off" />
            <small class="text-danger"><span asp-validation-for="StreetName"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="PostalCode" class="form-label">PostalCode</label>
            <input asp-for="PostalCode" class="form-control" autocomplete="off" />
            <small class="text-danger"><span asp-validation-for="PostalCode"></span></small>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">City</label>
            <input asp-for="City" class="form-control" autocomplete="off" />
            <small class="text-danger"><span asp-validation-for="City"></span></small>
        </div>


        <div class="mt-5">
            <div class="d-grid mb-5">
                <button type="submit" value="Submit" class="btn btn-success">Sign Up Now</button>
            </div>
        </div>

    </form>

</div>


<script>
    validateform()
</script>
