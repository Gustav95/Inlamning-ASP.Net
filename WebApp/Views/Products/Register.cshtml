@model ProductRegistrationViewModel
@{    ViewData["Title"] = "Registrera ny Produkt";}

<div class="d-flex justify-content-center">
    <div class="col-6">

        <form method="post" novalidate>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <small><span asp-validation-for="Name" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <small><span asp-validation-for="Price" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <small><span asp-validation-for="Description" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
                 <label asp-for="ImgURL" class="form-label"></label>
                 <input asp-for="ImgURL" class="form-control">
                 <small><span asp-validation-for="ImgURL" class="text-danger"></span></small>
            </div>

            <div class="mb-3">
            @foreach(SelectListItem tag in ViewBag.Tags)
            {
                <div>
                    <input type="checkbox" name="Tags" id="tag-@tag.Text-@tag.Value" value="@tag.Value" checked="@tag.Selected" class="form-check-input" />
                    <label for="tag-@tag.Text-@tag.Value" class="small form-check-label">@tag.Text</label>
                </div>
            }
            </div>



            <div class="d-grid mt-2">
                <button type="submit" class="btn btn-success">SKAPA</button>

            </div>

        </form>

    </div>
</div>

